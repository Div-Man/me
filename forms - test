<?php
error_reporting(-1);
ini_set('display_errors', 'On');

$help = 'Что бы увидеть тест, введите параметр test, напимер ?test=номер теста' . '<br>';

echo $help;

if(isset($_GET['test'])){
	$getParametr = true;
	if (file_exists('test/test' . $_GET['test'] . '.json')){
		$file = file_get_contents('test/test' . $_GET['test'] . '.json', true);
		$a = 1;
	}
	else{
